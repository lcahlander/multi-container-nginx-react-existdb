<security-manager xmlns="http://exist-db.org/Configuration" version="2.1">
    <authentication-entry-point>/authentication/login</authentication-entry-point>
    <!--<events></events>-->
    <realm id="JWT">
        <context>
            <domain>test</domain>
            <search>
                <account>
                    <name>$.sub</name>
                </account>
                <group>
                    <name>$.['https://example.com/auth'].groups[*]</name>
                </group>
            </search>
            <transformation>
                <add-group>guest</add-group>
            </transformation>
        </context>
    </realm>
</security-manager>
